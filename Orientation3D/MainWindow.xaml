<Window x:Class="Orientation3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Orientation3D"
        mc:Ignorable="d"
        Title="Orientation3D" Height="450" Width="800" Name="MainApp">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0" />
            <GradientStop Color="White" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Button x:Name="OpenComms" HorizontalAlignment="Left" Margin="20,338,0,0" VerticalAlignment="Top" Width="110" Height="45" Click="OpenCOM">
        <Button.Content>
            Connect
        </Button.Content>
    </Button>

</Window>
